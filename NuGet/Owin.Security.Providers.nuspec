<?xml version="1.0"?>
<package >
  <metadata>
    <id>Owin.Security.Providers</id>
    <version>1.2.1</version>
    <authors>Jerrie Pelser, Jérémie Bertrand</authors>
    <owners>Jerrie Pelser</owners>
    <licenseUrl>http://opensource.org/licenses/MIT</licenseUrl>
    <projectUrl>https://github.com/owin-middleware/OwinOAuthProviders</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>
      Additional OAuth providers for Katana (OWIN).  Includes providers for
      - LinkedIn
      - Yahoo
      - GitHub
	  - OpenID 2.0 providers
	  - Steam
    </description>
    <releaseNotes>
      Version 1.2.1:
      - Bug fixes to OpenID provider
      - Adds the possibility to skip the discovery phase for OpenID provider by indicating directly the provider login uri instead of the provider discovery uri
      
      Version 1.2:
      - Adds support for authenticating against OpenID 2.0 providers and Steam
    </releaseNotes>
